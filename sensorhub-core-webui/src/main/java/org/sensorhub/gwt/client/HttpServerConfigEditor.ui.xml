<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
xmlns:g="urn:import:com.google.gwt.user.client.ui"
xmlns:e="urn:import:com.google.gwt.editor.ui.client"
xmlns:s="urn:import:com.sencha.gxt.widget.core.client.form">
   <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="integerPropertyEditor" />
   <ui:style>
      .important {
      	font-weight: bold;
      }
   </ui:style>
   <g:HTMLPanel>
      <g:Grid>
         <g:row>
            <g:customCell>
               <g:HTML wordWrap="true">Port</g:HTML>
            </g:customCell>
            <g:customCell>
               <s:NumberField ui:field="httpPort" editor="{integerPropertyEditor}"/>
            </g:customCell>
         </g:row>
         <g:row>
            <g:customCell>
               <g:HTML wordWrap="true">Root URL</g:HTML>
            </g:customCell>
            <g:customCell>
               <s:TextField ui:field="rootURL"/>
            </g:customCell>
         </g:row>
      </g:Grid>         
      <g:Button styleName="{style.important}" ui:field="cancelButton">Cancel</g:Button>
      <g:Button styleName="{style.important}" ui:field="saveButton">Save</g:Button>      
   </g:HTMLPanel>
</ui:UiBinder> 